@using System.Web.UI.WebControls
@model InstituteOfFineArts.Models.Submission
    
        @using (Html.BeginForm("Create", "Submission", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.EditorFor(model => model.CompetitionId, new { htmlAttributes = new { @class = "single-input", @type = "hidden", @value = @ViewBag.CompetitionId } })
            <div class="col-lg-8 col-md-8" style="margin-left: 200px;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="mt-10">
                    @Html.EditorFor(model => model.SubmissionName, new { htmlAttributes = new { @class = "single-input", @PlaceHolder = "Picture Name" } })
                    @Html.ValidationMessageFor(model => model.SubmissionName, "", new { @class = "text-danger" })
                </div>
                <div class="mt-10">

                    <img id="previous" src="#" class="hidden img-thumbnail" alt="Alternate Text" style="width: 100px" />
                    @Html.EditorFor(model => model.Picture, new { htmlAttributes = new { @class = "single-input", @style = "background-color: #f3f3f3;"} })
                    @Html.ValidationMessageFor(model => model.Picture, "", new { @class = "text-danger" })
                    <div style="margin-top: 5px">
                        <button type="button" id="upload_widget1" class="genric-btn info radius">Upload files</button>
                    </div>
                </div>

                <div class="mt-10">
                    @Html.TextAreaFor(model => model.Description, new { @class = "single-textarea", @PlaceHolder = "Description" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
                <div class="button-group-area mt-40">
                    <input type="submit" value="Submit" class="genric-btn primary radius" />
                </div>
            </div>
        }
