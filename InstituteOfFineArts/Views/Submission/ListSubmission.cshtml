@using InstituteOfFineArts.Models
@model IEnumerable<InstituteOfFineArts.Models.Submission>
<div class="single-widget recent-posts-widget">
    <h4 class="title">Some Submissions</h4>
    <div class="blog-list ">



        @foreach (var item in Model)
        {
            <div class="single-recent-post d-flex flex-row">
                <div class="recent-thumb">
                    <a href="@Url.Action("Details", "Submission", new {id = item.SubmissionId})"><img class="img-fluid" style="width:65px; padding-bottom: 15px" src="@item.Picture" alt=""></a>
                </div>
                <div class="recent-details">
                    <a href="@Url.Action("Details", "Submission", new {id = item.SubmissionId})">
                        <h4>
                            @item.SubmissionName

                        </h4>
                    </a>
                    <p>
                        @item.Creator.FirstName @item.Creator.LastName
                    </p>
                    <p>
                        @item.UpdatedAt
                    </p>

                </div>
            </div>


        }
        @using (Html.BeginForm("ListSubmission", "Submission", FormMethod.Get))
        {
            @Html.AntiForgeryToken()


                <a href="@Url.Action("List", "Submission", new {id = Model.First().CompetitionId})"  style="text-align:left" class="text-uppercase">See More</a>


        }
        <!-- /.container -->


    </div>
</div>
