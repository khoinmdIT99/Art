@model IEnumerable<InstituteOfFineArts.Models.Competition>
    <section class="slide " id="home">
        <div class="container-style ">
            <div id="myCarousel" class=" carousel slide " data-ride="carousel">
                <div class="carousel-inner banner-area relative">
                    
                    @foreach (var item in Model)
                    {
                        <div class="item @Html.Raw(Model.First().Equals(item)? "active": "") style-slide">
                            <div class="overlay-bg overlay"></div>
                            <img src="@Url.Content(item.Slide)" alt="Los Angeles">
                            <div class="carousel-caption" style="margin-bottom:10vw">
                                <div class="col-sm-12">
                                    <h4 class="text-white font-style_1">Join Us Now!</h4>
                                    <h2 class="text-white font-style_2">
                                        @item.CompetitionName
                                    </h2>
                                    <p class="pt-20 pb-20 text-white font-style_3">
                                        @item.ShortDescription
                                    </p>
                                    @Html.ActionLink("Register", "Register", "Submission", new {id = item.CompetitionId}, new {@class ="primary-btn text-uppercase"})
                                </div>
                            </div>
                        </div>
                    }
                    


                </div>

                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </section>