@model IEnumerable<InstituteOfFineArts.Models.Submission>
<section class="exibition-area section-gap" id="exhibitions">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-60 col-lg-10">
                <div class="title text-center">
                    <h1 class="mb-10">List Submisstions</h1>
                    <p>Who are in extremely love with eco friendly system.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="active-exibition-carusel" style="margin-left:1vw">
                @foreach (var item in Model)
                {
                    <div class="single-exibition item">
                        <a href="@Url.Action("Details", "Submission", new {id = item.SubmissionId})"><img src="@Url.Content(item.Picture)" alt=""></a>
                        <ul class="tags">
                            <li><a href="@Url.Action("List", "Submission", new {id = item.CompetitionId})">See More</a></li>
                            <li><a href="@Url.Action("Details", "Submission", new {id = item.SubmissionId})">Details</a></li>
                        </ul>
                        <a href="#"><h4> @item.SubmissionName </h4></a>
                        <p>
                            @item.Description
                        </p>
                        <h6 class="date">@item.UpdatedAt</h6>
                    </div>
                }

            </div>
        </div>
    </div>
</section>


