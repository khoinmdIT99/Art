@model IEnumerable<InstituteOfFineArts.Models.Submission>
<section class="gallery-area section-gap" id="gallery">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-70 col-lg-8">
                <div class="title text-center">
                    <h1 class="mb-10 text-white">Our Exhibition Gallery</h1>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore  et dolore magna aliqua.</p>
                </div>
            </div>
        </div>
        <div id="grid-container" class="row">
            @foreach (var item in Model)
            {
                <a class="single-gallery" href="@Url.Content(item.Picture)"><img class="grid-item hgrid-item loaded resized" src="@Url.Content(item.Picture)"></a>
            }
        </div>
    </div>
</section>


