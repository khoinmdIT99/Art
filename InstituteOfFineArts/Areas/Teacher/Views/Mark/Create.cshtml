@using Microsoft.AspNet.Identity
@using InstituteOfFineArts.Models
@model InstituteOfFineArts.Models.Mark

@{
    ViewBag.Title = "Create";
    var submissionId = ViewBag.SubmissionId;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var competitionId = ViewBag.CompetitionId;
}
@using (Html.BeginForm("create", "Mark", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div style=" padding-top: 5%">
        <div class="whole-wrap">
            <div class="container ">

                <div class="section-top-border">
                    <div class="row">

                        <div class="col-md-4 mt-sm-20">
                            <div style="margin-bottom: 5vw; text-align:center">
                                <h2>@ViewBag.SubmissionName</h2>
                                <h4>@ViewBag.StudentName</h4>
                                <p>@ViewBag.Description</p>
                            </div>
                            <div class="box box-success">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Mark for Submission </h3>
                                </div>
                                <!-- /.box-header -->
                                <div class="box-body">
                                    <form role="form">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.EditorFor(model => submissionId, new { htmlAttributes = new { @class = "form-control", @type = "hidden", @value = @ViewBag.SubmissionId } })
                                        <!-- text input -->
                                        <div class="form-group">
                                            <label>@Html.LabelFor(model => model.Marks, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                                            <select name="Marks" class="form-control">
                                                <option value="0">0</option>
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                                <option value="5">5</option>
                                                <option value="6">6</option>
                                                <option value="7">7</option>
                                                <option value="8">8</option>
                                                <option value="9">9</option>
                                                <option value="10">10</option>
                                            </select>
                                            @Html.ValidationMessageFor(model => model.Marks, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label>@Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group" style="padding-top:2%">
                                            <input type="submit" value="Mark" class="btn btn-success" />
                                            <a href="@Url.Action("ListMark", "Mark",new{competitionId = competitionId})" class="btn btn-default" style="float:left; margin-right:2%">Back</a>
                                        </div>
                                    </form>
                                </div>
                                <!-- /.box-body -->



                            </div>
                        </div>
                        <div class="col-md-6">

                            <img class="img-rounded img-responsive pad picture" style="box-shadow: 0 0 10px 4px grey, 0 0 10px 0px grey, 0px 0 0px 0px grey; margin-left:2.5vw; width:100%" src="@Url.Content(@ViewBag.Picture)" alt="alternate text" />


                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

}
