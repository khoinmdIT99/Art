@using InstituteOfFineArts.Models
@model InstituteOfFineArts.Models.Award

@{
    ViewBag.Title = "Create";
    var submissionId = ViewBag.SubmissionId;
    var competitionId = ViewBag.CompetitionId;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("create", "Award", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div style=" padding-top: 5%">
        <div class="whole-wrap">
            <div class="container ">

                <div class="section-top-border">
                    <div class="row">

                        <div class="col-md-4 mt-sm-20">
                            <div class="box box-success">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Mark for Submission </h3>
                                </div>
                                <!-- /.box-header -->
                                <div class="box-body">
                                    <form role="form">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <input type="hidden" name="SubmissionId" value="@ViewBag.SubmissionId" />
                                     
                                        <!-- text input -->
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AwardName, htmlAttributes: new { @class = "control-label col-md-3" })
                                            <div class="col-md-9">
                                                @Html.EnumDropDownListFor(model => model.AwardName, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.AwardName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group" style="margin-top: 50px; margin-left: 20px;" >
                                            <input type="submit" value="Submit" class="btn btn-success" />
                                            <a href="@Url.Action("ListAward", "Award",new {competitionId = competitionId})" class="btn btn-default" style="margin-left:1%">Back to List</a>
                                        </div>
                                    </form>
                                </div>
                                <!-- /.box-body -->



                            </div>
                        </div>
                        <div class="col-md-6">

                            <img class="img-rounded img-responsive pad picture" style="box-shadow: 0 0 10px 4px grey, 0 0 10px 0px grey, 0px 0 0px 0px grey;" src="@Url.Content(@ViewBag.Picture)" alt="alternate text" />


                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
