@model InstituteOfFineArts.Models.UpdateViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <section class="content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="box box-warning col-md-6">
                <div class="box-header with-border">
                    <h3  style="text-align:center;">Update member</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form role="form">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        <!-- text input -->
                        <div class="form-group col-md-6 ">
                            <label>
                                @Html.LabelFor(m => m.UserType, new { @class = "col-md-2 control-label" })
                            </label>
                            @Html.EnumDropDownListFor(m => m.UserType, new { @class = " form-control" })
                            @Html.ValidationMessageFor(model => model.UserType, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label>@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label>@Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-6">
                            <label>@Html.LabelFor(model => model.UserCode, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                            @Html.EditorFor(model => model.UserCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserCode, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label>@Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-6">
                            <label>@Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                            @Html.EnumDropDownListFor(model => model.Gender, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label>@Html.LabelFor(m => m.Birthday, new { @class = "col-md-2 control-label" })</label>
                            @Html.EditorFor(m => m.Birthday, new { htmlAttributes = new { @class = "form-control", Type = "Date" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label>@Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                            @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label>@Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">

                        </div>
                        <div class=" col-md-6" style="text-align:right; margin-top:20px">
                            @Html.ActionLink("Back", "Index", "Member", new { @class = "btn btn-default" })
                            <input type="submit" value="Save" class="btn btn-warning" />
                        </div>
                    </form>
                </div>
                <!-- /.box-body -->
            </div>

        }

        
    </section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
