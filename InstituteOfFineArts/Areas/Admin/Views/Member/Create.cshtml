@model InstituteOfFineArts.Models.RegisterViewModel
@{
    ViewBag.Title = "Create";
}
    <section class="content">
        <h2>@ViewBag.Title.</h2>
        @using (Html.BeginForm("Create", "Member", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Create a new member</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form role="form">
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <!-- text input -->
                        <div class="form-group">
                            <label>
                                @Html.LabelFor(m => m.UserType, new { @class = "col-md-2 control-label" })
                            </label>
                            @Html.EnumDropDownListFor(m => m.UserType, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>
                                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                            </label>
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>
                                @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                            </label>

                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>
                                @Html.LabelFor(m => m.Birthday, new { @class = "col-md-2 control-label" })
                            </label>
                            @Html.TextBoxFor(m => m.Birthday, new { @class = "form-control", @Type = "Date" })
                        </div>
                        <div class="form-group">
                            <label>
                                @Html.LabelFor(m => m.Gender, new { @class = "col-md-2 control-label" })
                            </label>
                            @Html.EnumDropDownListFor(m => m.Gender)
                        </div>
                        <div class="form-group">
                            <label>
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                            </label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                            </label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                            </label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Register" />

                        </div>
                    </form>
                </div>
                <!-- /.box-body -->
            </div>

        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </section>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
