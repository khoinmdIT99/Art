@using Microsoft.AspNet.Identity
@model InstituteOfFineArts.Models.Submission
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Start cat-top Area -->
<section class="content">
    <div class="box">
        <div class="container">

            <div class="row" style="padding:2%">
                <div class="col-md-6" style="float:left;">
                    <img class="img-responsive img-rounded picture" src="@Url.Content(Model.Picture)" alt="">
                </div>

                <div class="col-md-4">
                    <h2>
                        @Html.DisplayFor(model => model.Competition.CompetitionName)
                    </h2>
                    <h3>@Html.DisplayFor(model => model.SubmissionName)</h3>
                    <h4>Author: @Html.DisplayFor(model => model.Creator.FirstName) @Html.DisplayFor(model => model.Creator.LastName)</h4>
                    <h4>Point:</h4>
                    @if (Model.Marks.Any())
                    {
                        @Html.DisplayFor(model => model.Marks.First().Marks)
                    }

                    <h4>Award:  @Html.DisplayFor(model => model.Award.AwardName)</h4>
                    <h4>Post Date: @Html.DisplayFor(model => model.UpdatedAt)</h4>
                    <h4>Description : @Html.DisplayFor(model => model.Description)</h4>
                </div>

            </div>
            <div class="row" style="padding:4%">
                <div class="col-md-offset-0">
                    <a class="btn btn-success" href="@Url.Action("List", "Submission", new {id = Model.CompetitionId})">Back</a>
                </div>
            </div>
        </div>

    </div>
</section>

